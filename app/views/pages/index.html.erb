<div class="container">
	<div class="page index">
		<h2 class="text-center">Pages</h2>
		
		<br>
		<%= link_to(image_tag('new.jpg', :size => '20x20', :alt => '+') + "Add New Page", {:action => 'new'}, :class => 'action new') %>
		<br>

		<table class="table" sumamry="Page list">
			<tr class="header">
				
				<th>Position</th>
				<th>Subject</th>
				<th>Page</th>
				<th>Permalink</th>
				<th>Visible</th>
				<th>Sections</th>
				<th>Actions</th>
			</tr>
			<% @pages.each do |page| %>
			<tr>
				<td><%= page.position %></td>
				<td><%= page.subject.name if page.subject %></td>
				<td><%= page.name %></td>
				<td><%= page.permalink %></td>
				<td class="center"><%= status_tag(page.visible) %></td>
				<td class="center"><%= page.sections.size %></td>
				<td class="actions">
					<%= link_to("Show", {:action => 'show', :id => page.id}, :class => 'action show') %>
					<%= link_to("Edit", {:action => 'edit', :id => page.id}, :class => 'action edit') %>
					<%= link_to("Delete", {:action => 'delete', :id => page.id}, :class => 'action delete')%>
				</td>
			</tr>
			<% end %>
		</table>
	
	</div>


</div>